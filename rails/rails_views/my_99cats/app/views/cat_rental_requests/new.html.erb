<h1>Request to rent a cat!</h1>

<form action ="/cat_rental_requests" method="POST">
  <label for="cat_id">Cat</label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled>-- Please Select --</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>" <%= cat.id == params[:cat_id].to_i ? "selected" : "" %>><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start date</label>
  <input type="date" id="start_date" name ="cat_rental_request[start_date]">

  <br>

  <label for="end_date">End date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]">
  
  <br>

  <input type="submit" value="Submit request to rent a cat">

  <br>

  <a href="/cats/<%= params[:cat_id] %>">Go back to cat</b>
</form>